<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoactiActivity"
    android:background="#222222">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


                <ImageView
                    android:id="@+id/imagePortada"
                    android:layout_width="430dp"
                    android:layout_height="498dp"
                    android:layout_marginLeft="-6dp"
                    android:layout_marginTop="-15dp"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"></ImageView>

                <TextView
                    android:id="@+id/txtTituloActi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="30dp"
                    android:text="Entrenamientos de Fuerza"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imagePortada"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#8a8a8a"
                    android:text="By Nelson Sanchez Usero"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintStart_toStartOf="@id/textView"
                    app:layout_constraintTop_toBottomOf="@+id/textView"
                    ></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtTextoActi"
                    android:layout_marginTop="50dp"
                    android:text="Get unlimited access to fitness and nutrition expertise from our Master Trainers Get unlimited access to fitness and nutrition
Get unlimited access to fitness and nutrition expertise from our Master Trainers Get unlimited access to fitness and nutrition
Get unlimited access to fitness and nutrition expertise from our Master Trainers Get unlimited access to fitness and nutrition\n\n
Get unlimited access to fitness and nutrition expertise from our Master Trainers Get unlimited access to fitness and nutrition"
                    android:textColor="#d1d1d1"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="50dp"
                    app:layout_constraintStart_toStartOf="@+id/textView"
                    app:layout_constraintTop_toBottomOf="@+id/textView"></TextView>



            </LinearLayout>
        </LinearLayout>


    </ScrollView>

    <ImageButton
        android:id="@+id/btnSalirInfo"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="8dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/botonsalir"
        android:src="@drawable/closeboton2"
        android:layout_alignParentStart="true"
        >

    </ImageButton>

</androidx.constraintlayout.widget.ConstraintLayout>