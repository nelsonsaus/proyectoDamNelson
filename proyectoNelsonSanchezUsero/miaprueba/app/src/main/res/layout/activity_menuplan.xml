<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuplanActivity"
    android:background="#121028">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btnSalirMenu"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/botonsalir"
                android:src="@drawable/closeboton2"
                android:elevation="999dp"></ImageButton>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/portada"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="320dp"
                        android:src="@drawable/port"></ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:paddingLeft="30dp"
                        android:paddingBottom="50dp"

                        android:text="Elige el Plan"
                        android:textColor="#8BC34A"
                        android:textSize="33sp"
                        android:textStyle="bold"></TextView>

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/fondo"
                    android:orientation="vertical"


                    >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/cardNovato"
                        android:elevation="30dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/foto1"
                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                android:elevation="0dp"
                                android:foreground="@drawable/tres"
                                app:cardElevation="0dp"
                                app:cardMaxElevation="0dp"></androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/triangle11"
                                android:layout_width="75dp"
                                android:layout_height="160dp"
                                android:layout_alignRight="@id/foto1"
                                android:backgroundTint="@android:color/transparent"
                                android:elevation="0dp"
                                android:foreground="@drawable/triangleplan"
                                app:cardElevation="0dp"
                                app:cardMaxElevation="0dp"></androidx.cardview.widget.CardView>

                        </RelativeLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="240dp"
                            android:layout_height="match_parent"
                            android:backgroundTint="#090814"
                            android:elevation="0dp"
                            app:cardElevation="0dp"
                            app:cardMaxElevation="0dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:paddingTop="40dp"
                                android:text="ENTRENAMIENTO"
                                android:textColor="@color/white"
                                android:textSize="24sp"
                                android:textStyle="bold"></TextView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:paddingTop="80dp"
                                android:text="NOVATO"
                                android:textColor="#B6A934"
                                android:textSize="24sp"
                                android:textStyle="bold"></TextView>


                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/cardMedio"
                        android:layout_marginTop="50dp"
                        android:elevation="30dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/foto2"
                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                android:elevation="0dp"
                                android:foreground="@drawable/dos"
                                app:cardElevation="0dp"
                                app:cardMaxElevation="0dp"></androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/triangle12"
                                android:layout_width="75dp"
                                android:layout_height="160dp"
                                android:layout_alignRight="@id/foto2"
                                android:backgroundTint="@android:color/transparent"
                                android:elevation="0dp"
                                android:foreground="@drawable/triangleplan"
                                app:cardElevation="0dp"
                                app:cardMaxElevation="0dp"></androidx.cardview.widget.CardView>

                        </RelativeLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="240dp"
                            android:layout_height="match_parent"
                            android:backgroundTint="#090814"
                            android:elevation="0dp"
                            app:cardElevation="0dp"
                            app:cardMaxElevation="0dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:paddingTop="40dp"
                                android:text="ENTRENAMIENTO"
                                android:textColor="@color/white"
                                android:textSize="24sp"
                                android:textStyle="bold"></TextView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:paddingTop="80dp"
                                android:text="MEDIO"
                                android:textColor="#B65D34"
                                android:textSize="24sp"
                                android:textStyle="bold"></TextView>


                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/cardExperto"
                        android:layout_marginTop="50dp"
                        android:layout_marginBottom="30dp"
                        android:elevation="30dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/foto3"
                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                android:elevation="0dp"
                                android:foreground="@drawable/tres"
                                app:cardElevation="0dp"
                                app:cardMaxElevation="0dp"></androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/triangle13"
                                android:layout_width="75dp"
                                android:layout_height="160dp"
                                android:layout_alignRight="@id/foto3"
                                android:backgroundTint="@android:color/transparent"
                                android:elevation="0dp"
                                android:foreground="@drawable/triangleplan"
                                app:cardElevation="0dp"
                                app:cardMaxElevation="0dp"></androidx.cardview.widget.CardView>

                        </RelativeLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="240dp"
                            android:layout_height="match_parent"
                            android:backgroundTint="#090814"
                            android:elevation="0dp"
                            app:cardElevation="0dp"
                            app:cardMaxElevation="0dp">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:paddingTop="40dp"
                                android:text="ENTRENAMIENTO"
                                android:textColor="@color/white"
                                android:textSize="24sp"
                                android:textStyle="bold"></TextView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:paddingTop="80dp"
                                android:text="EXPERTO"
                                android:textColor="#B63434"
                                android:textSize="24sp"
                                android:textStyle="bold"></TextView>


                        </androidx.cardview.widget.CardView>

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>





        </RelativeLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>